<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlItemListTP"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingItemCourseGridViewFH"
    android:elevation="2dp" >

    <LinearLayout
        
        android:layout_width="@dimen/widthItemCourseGridViewFH"
        android:layout_height="@dimen/heightItemCourseGridViewFH"
        android:background="@drawable/drawable_rectangle_sharp"
        android:orientation="vertical" 
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageViewCourseIcon"
            android:layout_width="@dimen/widthItemIconCourseGridViewFH"
            android:layout_height="@dimen/widthItemIconCourseGridViewFH"
            android:src="@drawable/icon_1"
            android:layout_gravity="center_horizontal"
           />

        <TextView
            android:id="@+id/textNameSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:lines="2"
            android:layout_marginTop="10dp"
            android:text="ETHICS"
            android:textColor="@color/colorTextCourseTitle"
            android:textSize="@dimen/sizeTitleCourseGridViewFH"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>