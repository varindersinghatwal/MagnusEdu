<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textViewAboutUSHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutUSHeader"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="@dimen/sizeHeaderAboutUS"
            android:textStyle="bold"
            android:background="@drawable/drawable_rectangle_sharp"
            android:elevation="@dimen/leftPaddingItemChapter"
            android:textColor="@color/colorChapterTitle"/>

        <TextView
            android:id="@+id/textViewAboutUSBody"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_us"
            android:textSize="@dimen/sizeBodyAboutUS"
            android:maxLines="1100"
            android:scrollbars="vertical"
            android:textColor="@color/blue"/>

    </LinearLayout>

    </ScrollView>

